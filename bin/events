#!/usr/bin/env ruby

require 'azure'
require 'thor'

module Events
  class Daemon < Thor
    package_name "Events"

    desc "start", "Starts the Events daemon."
    method_option :azure_servicebus_namespace, :description => "Azure Service Bus Namespace", :default => ENV['AZURE_SERVICEBUS_NAMESPACE']
    method_option :azure_servicebus_access_key, :description => "Azure Service Bus Access Key", :default => ENV['AZURE_SERVICEBUS_ACCESS_KEY']
    method_option :azure_servicebus_issuer, :description => "Azure Service Bus Issuer", :default => ENV['AZURE_SERVICEBUS_ISSUER']
    def start
puts options.to_s
    end
  end
end

Events::Daemon.start
